<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:NorwegianCityRace" 
    x:Class="NorwegianCityRace.VIew.NorwegianCityRacePage"
    BackgroundColor="#1d3445">

    <StackLayout x:Name="Content_Layout" HorizontalOptions="Center" VerticalOptions="Center">
        <Image x:Name="Logo" HeightRequest="160" WidthRequest="160" Source="Sample.png"></Image>
        <Entry Placeholder="Enter PIN Code" TextColor="White" FontSize="20" HorizontalTextAlignment="Center" WidthRequest="300"> </Entry>
        <Button x:Name="Enter_game_btn" WidthRequest="300" Text="Enter" FontSize="20" Clicked="Enter_btn_clicked"></Button>

    </StackLayout>

    
</ContentPage>
