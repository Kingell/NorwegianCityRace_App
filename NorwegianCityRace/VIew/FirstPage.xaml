<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="NorwegianCityRace.VIew.FirstPage" BackgroundColor="#65808c">


    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image x:Name="grp_img" Source="Sample.png" WidthRequest="400" HeightRequest="400">
        <Image.GestureRecognizers>
        <TapGestureRecognizer Tapped="Handle_Tapped"></TapGestureRecognizer>
            </Image.GestureRecognizers>
        </Image>
        <Entry x:Name="grp_txt" 
            Placeholder="Enter Group Name " 
            FontSize="15" 
            HorizontalTextAlignment="Center"
            WidthRequest="200"></Entry>
        <Button x:Name="next_btn" Text="Next" WidthRequest="200" Clicked="Next_Clicked"></Button>
    </StackLayout>
    
</ContentPage>
